@inject IJSRuntime JSRuntime
@using System.Text.Json
@page "/"
@rendermode InteractiveServer
@using GoogleMapsComponents
@using GoogleMapsComponents.Maps



<div class="clock-container">
    @if (!ClockedIn && !ClockedOut)
    {
        <button class="clock-button btn btn-success" @onclick="ClockIn">Clock In</button>
    }
    else if (ClockedIn)
    {
        <div class="top-left">
            <button class="btn btn-danger clockout-btn" @onclick="ClockOut">Clock Out</button>
        </div>
        <h3 class="clock-time">Clocked in at: @TimeUpdate</h3>
    }
    else if (ClockedOut)
    {
        <button class="clock-button btn btn-success" @onclick="ClockIn">Clock Back In</button>
        <h3 class="clock-time">Clocked out at: @TimeUpdate</h3>
    }
</div>

