@code {
    private bool ClockedIn = false;
    private bool ClockedOut = false;
    private DateTime TimeUpdate;

    public async void ClockIn()
    {
        await JSRuntime.InvokeVoidAsync("initMap");
        Console.WriteLine("Map Update: Clock In");
        ClockedIn = true;
        ClockedOut = false;
        TimeUpdate = DateTime.Now;
        StateHasChanged();
    }

    public async void ClockOut()
    {

        await JSRuntime.InvokeVoidAsync("initMap");
        Console.WriteLine("Map Update: Clock Out");
        ClockedIn = false;
        ClockedOut = true;
        TimeUpdate = DateTime.Now;
        StateHasChanged();
    }

}


